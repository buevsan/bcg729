#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# Uncomment this to change the hardening options
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

DPKG_EXPORT_BUILDFLAGS=1
include /usr/share/dpkg/buildflags.mk
CFLAGS+=$(CPPFLAGS)
CXXFLAGS=$(CPPFLAGS)

# export system compiler & qt tools prefix to cmake

LDFLAGS+= -Wl,--as-needed
ifneq ($(DEB_HOST_GNU_TYPE),$(DEB_BUILD_GNU_TYPE))
  export CC=$(DEB_HOST_GNU_TYPE)-gcc
  export CXX=$(DEB_HOST_GNU_TYPE)-g++
  export CMAKE_TOOLCHAIN_FILE=/etc/dpkg-cross/cmake/CMakeCross.txt
else
  export CC=gcc
  export CXX=g++
endif

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

%:
	dh $@ --buildsystem=cmake --builddirectory=build 

override_dh_auto_configure:
	dh_auto_configure -- \
 -DCMAKE_INSTALL_PREFIX=/usr\
 -DCMAKE_INSTALL_SYSCONFDIR=/etc\
 -DCMAKE_INSTALL_LOCALSTATEDIR=/var\
 -DCMAKE_INSTALL_LIBDIR=lib/$(DEB_HOST_MULTIARCH)

override_dh_strip:
	dh_strip -plibbcg729-0 --dbg-package=libbcg729-0-dbg
